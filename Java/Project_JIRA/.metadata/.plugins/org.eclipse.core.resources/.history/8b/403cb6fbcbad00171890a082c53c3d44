package com.tracker.Attribute.web;

import javax.servlet.http.*;

import com.tracker.Attribute.model.Attribute;
import com.tracker.Command.*;
import com.tracker.DatabaseHelper.*;

import javax.servlet.*;

import java.io.IOException;
import java.io.PrintWriter;

public class AttributeServlet extends HttpServlet{
	public void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		Attribute attribute;
		DatabaseManager databaseManager;
		Command command;
		
		response.setContentType("text/html");
		PrintWriter out = response.getWriter();
		
		String category = request.getParameter("category");
		
		if(category.equals("add")) {
			
			attribute = new Attribute(request);
			databaseManager = new AttributeDatabaseManager(attribute);
			command = new AttributeCommands(databaseManager)
					
			attribute.setDatabaseManager(databaseManager);
			attribute.setCommand(command);
		}
		
		String status = "";
		
		out.print("The status is " + status);
	}
}
