$(document).ready(function() {
	
	var templateController = "/MiniTracker/Template.do";
	
	$("#addTemplateButton").click(function() {
		var value = $("#addTemplateText").val();
		var parent = $("option:selected").attr("templateId");
		
		$.post(templateController, { category : "addTemplate", templateName : value, parentTemplate : parent}, function(data, status){
			alert(data);
		})
		
	})
})