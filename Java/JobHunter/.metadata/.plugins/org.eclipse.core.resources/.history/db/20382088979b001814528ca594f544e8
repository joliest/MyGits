package com.jobhunter.database;

import java.sql.SQLException;

import com.jobhunter.components.Account;

public class AccountDatabase extends Database{
	
	static final String INSERT = "INSERT INTO ACCOUNT VALUES(?,?)";
	
	public void add(Account account) {
		String emaail = account.getEmailAddress();
		String password = account.getPassword();
		
		try {
			preparedStatement = connection.prepareStatement(INSERT);
			preparedStatement.setString(1, emaail);
			preparedStatement.setString(2, password);
			preparedStatement.execute();
		} catch (SQLException sEx) {
			System.out.println("AccountDatabase.add(Account) : " + sEx);
		} finally {
			preparedStatement.close();
			connection.close();
		}
	}
}
