<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joliver_pc.eventhandling.MainActivity">


    <Button
        android:id="@+id/joliverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/joliver_button"
        android:layout_alignTop="@+id/joliverText"
        android:layout_alignLeft="@+id/joliverText"
        android:layout_alignStart="@+id/joliverText"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/joliverText"
        android:layout_alignEnd="@+id/joliverText" />

    <EditText
        android:id="@+id/joliverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>
